pipeline {
    agent any
    tools {
        gradle 'gradle'
    }
    stages {
        stage('Git Clone') {
            steps {
                git branch: 'developer', url: 'https://github.com/Dev-SoUni/dieter-community.git'
            }
        }
        stage('BE-Build') {
            steps {
                print('be-build')
                echo "Branch: ${env.GIT_BRANCH}"
                echo "Commit: ${env.GIT_COMMIT}"
                echo "buildNumber: ${env.BUILD_NUMBER}"
                echo "JobName: ${env.JOB_NAME}"
//                 dir("./backend") {
//                     sh "./gradlew clean build"
//                 }
            }
        }
    }
}