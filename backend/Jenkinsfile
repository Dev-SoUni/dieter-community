pipeline {
    agent any
    triggers {
        GenericTrigger(
            genericVariables: [
                [key: 'payload', value: '$']
            ],

        )
    }

    stages {
        stage('Process Payload') {
            steps {
                script {
                    // JSON 파싱
                    // 여기서 부터 다시 보기..!
                    def jsonSlurper = new groovy.json.JsonSlurper()
                    def payloadJson = jsonSlurper.parseText(payload)

                    // 데이터 출력
                    echo "repository.id $payloadJson.repository.id"

                }
            }
        }
    }
}
