pipeline {
    agent any



    stages {
        stage('Process Payload') {
            steps {
                script {
                    // JSON 파싱
                    def jsonSlurper = new groovy.json.JsonSlurper()
                    def payloadJson = jsonSlurper.parseText(payload)

                    // 데이터 출력
                    echo "owner.name $payloadJson.repository.owner.name"
                    echo "html_url $payloadJson.repository.html_url"
                    echo "description $payloadJson.repository.description"
                    echo "updated_at $payloadJson.repository.updated_at"
                    echo "visibility $payloadJson.repository.visibility"
                    echo "visibility $payloadJson.repository.visibility"

                }
            }
        }
    }
}
