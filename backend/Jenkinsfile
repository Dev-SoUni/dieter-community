pipeline {
    agent any
    triggers {
        GenericTrigger(
            genericVariables: [
                [key: 'payload', value: '$']
            ],

        )
    }

    stages {
        stage('Process Payload') {
            steps {
                script {
                    // JSON 파싱
                    def jsonSlurper = new groovy.json.JsonSlurper()
                    def payloadJson = jsonSlurper.parseText(env.ayload)

                    // 데이터 출력
                    echo "$payloadJson.repository.id"

                }
            }
        }
    }
}
